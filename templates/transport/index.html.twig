{% extends 'base.html.twig' %}

{% block home %}
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center">


        <div class="container position-relative text-center text-lg-left" data-aos="zoom-in" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-8">

                    <h1>Welcome to <span>HappyTrip</span></h1>
                    <h2> Take a look on our Transports </h2>


                    <div class="btns">
                        <a href="#transport" class="btn-menu animated fadeInUp scrollto">Transports</a>
                        {% if app.user %}
                            <a href="#" class="btn-book animated fadeInUp scrollto">Book Now</a>
                        {% else %}
                            <a href="#" class="btn-book animated fadeInUp scrollto">Book Now</a>
                        {% endif %}
                    </div>
                </div>

            </div>
        </div>
    </section><!-- End Hero -->

{% endblock %}

{% block body %}
{% block transports %}
<section id="transports" class="chefs">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Transports</h2>
            <p>Transports List</p>
            <form action="" method="get">
                <div class="input-group" style="width: 24%;float: right;">
                    <div class="form-outline">
                        <input type="text" class="form-control" id="search" name='q' placeholder="Search" style="width:218px;"/>
                    </div>
                    <button type="submit" class="btn btn-primary" >
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </form>
            <br>
        </div>
        <div class="row">
            {% for transport in transports %}
                <div class="col-lg-4 col-md-6">
                        <div class="member-info">
                            <div class="member-info-content">
                                <a href="{{ path('show_transport',{'id':transport.id}) }}">
                                    <h4 id="transportType">Type : {{ transport.type }}</h4>
                                    <h4 id="transportType">Localisation : {{ transport.localisation }}</h4>
                                    <h4 id="transportType">Prix : {{ transport.prix }}</h4>
                                </a>
                            </div>
                        </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section><!-- End Chefs Section --
{% endblock %}
{% endblock %}

